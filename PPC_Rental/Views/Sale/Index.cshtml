
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutSale.cshtml";
}
@using PPC_Rental.Models;
@model IEnumerable<PPC_Rental.Models.PROPERTY>


<!DOCTYPE html>
<html>
<body>
    <div>
        <div class="col-md-1">
            <img src="~/Images/ImageSale/if_scroll left_36560.png" style="width:38px; margin-left: 50%" />
        </div><h1 style="margin-top: 10px;">Danh sách dự án</h1>
    </div>
    <div class="card mb-3" style="margin-top: 10px;">
        <div class="card-header">
            <i class="fa fa-table"></i> Data Table
        </div>
        <div class="card-body" style="padding:0;">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên dự án</th>
                            <th>Avatar</th>
                            <th>Loại dự án</th>
                            <th>Quận</th>
                            <th>Đường</th>
                            <th>Trạng thái</th>
                            <th>Công cụ</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Tên dự án</th>
                            <th>Avatar</th>
                            <th>Loại dự án</th>
                            <th>Quận</th>
                            <th>Đường</th>
                            <th>Trạng thái</th>
                            <th>Công cụ</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (PROPERTY item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modle => item.PropertyName)</td>
                                <td><img src="~/Images/@item.Avatar" style="width: 50px;" /></td>
                                <td>@Html.DisplayFor(modle => item.PROPERTY_TYPE.Description)</td>
                                <td>@Html.DisplayFor(modle => item.DISTRICT.DistrictName)</td>
                                <td>@Html.DisplayFor(modle => item.STREET.StreetName)</td>
                                <th>@Html.DisplayFor(modle => item.PROJECT_STATUS.Status_Name)</th>
                                <td>
                                    @Html.ActionLink("Detail", "DetailProject", new { id = item.ID })|
                                    @Html.ActionLink("Add", "AddProject")|
                                    @Html.ActionLink("Edit", "EditProject1", new { id = item.ID })|
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted"></div>
    </div>
</body>
</html>
<script type="text/javascript">
    function Delete() {
        if (confirm("Bạn chắc chắn muốn xóa dự án này?"))
            return true
        else
            return false
    }
    ForcusEvent = false;
    checked = false;
</script>



