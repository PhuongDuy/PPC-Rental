@model PPC_Rental.Models.ABOUT

@{
    ViewBag.Title = "editabout";
    Layout = "~/Views/Shared/LayoutSale.cshtml";
}
<div>
    <div class="col-md-1">
        <img src="~/Images/ImageSale/if_scroll left_36560.png" style="width:38px; margin-left: 50%" />
    </div><h1 style="margin-top: 10px;">About \ Cập nhật thông tin công ty</h1>
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div style="margin-top: 0;">
            <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;margin : 0;background-color: #323b3e">
                <div class="container-fluid" style="margin-bottom: 0;padding-left: 20px;">
                    <p style="margin-bottom: 0;color: white;font-size: 20px">Thông tin công ty</p>
                </div>
            </nav>
            <div style="border: 1px solid;">
                <div style="padding: 10px;">

                    <div class="input-group">
                        <span class="input-group-addon">Title</span>
                        <input style="max-width:initial;" id="PropertyName" type="text" class="form-control" name="Title" value="@Html.ValueFor(m => m.Title)">
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">About us</span>
                        <textarea style="max-width:initial;" type="text" class="form-control" name="about_us">@Html.ValueFor(m => m.About_us)</textarea>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">CEO</span>
                        <textarea style="max-width:initial;" type="text" class="form-control" name="CEO">@Html.ValueFor(m => m.CEO)</textarea>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Our Team</span>
                        <textarea style="max-width:initial;" type="text" class="form-control" name="our_team">@Html.ValueFor(m => m.Our_Team)</textarea>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Decription</span>
                        <textarea style="min-height: 140px;max-width:initial;" type="text" class="form-control" name="decription">@Html.ValueFor(m => m.Decription)</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1" style="margin-top: 10px;">
        <div>
            @Html.ActionLink("Back to List", "About")
        </div>
    </div>
    <div class="col-md-11" style="margin-top: 10px;text-align: right;">
        <div class="form-group">
            <div class="col-md-11">
                <input style="width:100px;font-size:16px;" type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}