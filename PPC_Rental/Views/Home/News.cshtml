@model IEnumerable<PPC_Rental.Models.NEW>
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

</br>
<div class="row">
    @{ foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="thumbnail">
                    <img src="~/Images/News/@item.Image" alt="...">
                    <div class="caption">
                        <h3><a href="/Home/Newdetail/@item.ID">@item.Name</a></h3>
                        <p>@item.Created_at</p>
                    </div>
                </div>
            </div>
        }
    }
</div>