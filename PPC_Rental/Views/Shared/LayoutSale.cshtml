
@{
    ViewBag.Title = "LayoutSale";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewlistofprojectagency" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/sb-admin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap1.css" rel="stylesheet" />


</head>
<body style="padding: 0;background-color: #e0e0d1;margin-left: -15px;margin-right: -15px;">
    <div class="container-fluid">
        <div class="col-md-2" style="background-color: #1f1f14;height:800px">
            <div>
                <img src="~/Images/ImageSale/logo.png" alt="logo PPC Rental" style="width: 100%;height:auto;" />
            </div>
            <hr style="margin-bottom: 0;margin-top: 0;" />
            <div class="row">
                <div class="col-md-6 text-center">
                    <img src="~/Images/ImageSale/if_malecostume_403022.png" alt="Hinh avatar sale" style="width: 100px;" />
                </div>
                <div class="col-md-6" style="padding-top: 20px;padding-left:5px;padding-right: 5px;">
                    <h2 style="text-align:center;color: aliceblue">Sale</h2>
                    <div>
                        <span style="font-size: 11px;color: aliceblue;">Account -</span> 
                        <span style="font-size: 11px;color: aliceblue;"> Đăng xuất</span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="container">
                <ul style="padding-left: 0;">
                    <li style="font-size: 20px"><img src="~/Images/ImageSale/if_Home Green_41298.png" style="width: 38px" /> Trang chủ</li>
                    <li style="font-size: 20px">
                        <img src="~/Images/ImageSale/if_user7_49396.png" style="width :36px" /> Agency
                        <ul style="padding-left: 60px;">
                            <li style="font-size:16px"> Quản lý tài khoản</li>
                            <li style="font-size:16px"> Duyệt tài khoản</li>
                        </ul>
                    </li>

                    <li style="font-size: 20px">
                        <img src="~/Images/ImageSale/if_folder-project_287298.png" style="width :36px" /> Dự án
                        <ul style="padding-left: 60px;">
                            <li style="font-size:16px;background-color: aliceblue;color:black;"> Quản lý dự án</li>
                            <li style="font-size:16px"> Duyệt dự án</li>
                            <li style="font-size:16px"> Phí thanh toán</li>
                        </ul>
                    </li>
                    <li style="font-size: 20px"><img src="~/Images/ImageSale/if_kaddressbook_24061.png" style="width :36px" /> Hỗ trợ</li>
                </ul>
            </div>
        </div>
        <div class="col-md-10" style="height: 800px;">
            <div>
                @RenderBody()



            </div>
        </div>
        <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/bootstrap.bundle.min.js"></script>
        <script src="~/Scripts/jquery.easing.min.js"></script>
        <script src="~/Scripts/jquery.dataTables.js"></script>
        <script src="~/Scripts/dataTables.bootstrap4.js"></script>
        <script src="~/Scripts/sb-admin.min.js"></script>
        <script src="~/Scripts/sb-admin-datatables.min.js"></script>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
